<% if @question.errors.any? %>
  <div class="alert alert-info" role="alert">
    <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @question do |f| %>
  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_field :summary, class: "form-control" %>
  </div>
  <datalist id="tag-list"></datalist>
  <%= f.fields_for :question_tags do |qtf| %>
    <div class="form-group">
      <span class="delete-tag">&#x2716;</span>
      <%= qtf.text_field :name, placeholder: "Tag Name", list: "tag-list", autocomplete: "off" %><%= qtf.text_field :color, placeholder: "Color", type: "color" %>
    </div>
  <% end %>
  <div class="form-group">
  </div>
  <div class="form-group">
    <%= f.label :content, "Question" %>
    <%= f.text_area :content, class: "form-control", rows: "3" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>