<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= question.summary %></h5>
    <% if current_page?(questions_path) %>
      <p class="card-question-text"><%= truncate question.content, length: 150 %></p>
      <%= link_to "Answer question", question_path(question), class: 'btn btn-primary' %>
    <% else %>
      <p class="card-text"><%= question.content %></p>
    <% end %>
  </div>
  <div class="card-footer">
    <small class="text-muted">
      Asked by <%=question.user.email %>,
      <%= content_tag(:abbr, title: question.created_at) do %>
        <%= time_ago_in_words(question.created_at) %> ago
      <% end %></small>
  </div>
</div>