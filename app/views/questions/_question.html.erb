<div class="card my-2">
  <div class="card-body">
    <h5 class="card-title"><%= link_to question.summary, question_path(question) %></h5>
    <p class="card-question-text"><%= question.content %></p>
  </div>
  <div class="card-footer">
    <small><%= "Tags: #{question.tag_names}" if question.tags.any? %></small><br>
    <small class="text-muted">
      Asked by <%=question.user.full_name %>,
      <%= content_tag(:abbr, title: question.created_at) do %>
        <%= time_ago_in_words(question.created_at) %> ago
      <% end %>
    </small>
  </div>
</div>